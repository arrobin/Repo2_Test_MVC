@model IEnumerable<Repo2_Test_MVC.Models.Section>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<script>
    $(document).ready(function () {
        $('#sectionTable').DataTable();
    });
</script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="sectionTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDelete)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SectionId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SectionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SectionId })
                </td>
            </tr>
        }
    </tbody>
</table>
